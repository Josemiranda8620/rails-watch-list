<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <h1>New Bookmark</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit 'Add Bookmark', class: 'btn btn-danger mt-3' %>
      <% end %>
    </div>
  </div>
</div>