<div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://images.unsplash.com/photo-1518676590629-3dcbd9c5a5c9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1728&q=80') %>)">
  <h1 style="font-size: 60px"><%= @list.name %></h1> 
</div>

<h3 class="mt-4 ml-3 mb-4">
  <strong>Bookmarked movies</strong>
  <%=  %>
</h3>


<% if @list.movies.any? %>
  <p>
    <div class="container d-flex flex-column">
      <ul>
        <% @list.bookmarks.each do |bookmark| %>
          <li class="list-group-item  mt-3 mr-4"><%= bookmark.movie.title%> | Rating: <%= bookmark.movie.rating%>
          <p> <%= bookmark.movie.overview%></p>
          <%= link_to 'Delete bookmark', bookmark_path(bookmark), method: :delete, class: 'btn btn-danger mt-3 mb-1', data: { confirm: "Destroy bookmark?"}%>
        <% end %>  
      </ul>
    </div>
  </p>
<% else %>
  <div class="ml-3 mb-4">
    <h4>No movies</h4>
  </div>  
<% end %>
<%= link_to 'Add movie', new_list_bookmark_path(@list), class: "btn btn-dark ml-3 mb-4" %>
<%= link_to 'Home', lists_path, class: "btn btn-dark ml-3 mb-4"  %>

